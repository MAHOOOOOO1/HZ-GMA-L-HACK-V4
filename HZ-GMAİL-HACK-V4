def scanningAnimation(text):
    global stop
    i = 0
    temp = 0
    while stop is not True:
        tempText = list(text)
        if i >= len(tempText):
            i = 0
        if temp > 100:
            break
        tempText[i] = tempText[i].upper()
        tempText = ''.join(tempText)
        sys.stdout.write(tempText + '\r')
        sys.stdout.flush()
        i += 1
        temp += 1
        time.sleep(0.1)

